<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="174dp">

    <RelativeLayout
        android:id="@+id/rv_item_act_nav_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/rv_item_act_nav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_btn_news"/>

        <TextView
            android:id="@+id/rv_item_act_nav_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시 소식"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toEndOf="@id/rv_item_act_nav_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/rv_item_act_nav_ibtn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_next_b_16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_act_nav_recycler_img_list"
        app:layout_constraintTop_toBottomOf="@id/rv_item_act_nav_relative"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>