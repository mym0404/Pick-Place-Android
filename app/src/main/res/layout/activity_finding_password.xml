<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.main.FindingPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/navi_btn_back_b"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:lineSpacingExtra="13sp"
            android:text="비밀번호 찾기"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/navi_btn_close_b"/>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:startIconDrawable="@drawable/mail_icon_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:hint="이메일"
        android:paddingHorizontal="20sp"
        app:boxBackgroundColor="#ffffff">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:textColor="#c0c0c0"
        android:text="가입하신 이메일로 임시비밀번호를 보내드립니다."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/m_btn_finding_pw"
        android:layout_width="134dp"
        android:layout_height="32dp"
        android:layout_marginTop="215dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorWhite_1"
        android:insetLeft="0dp"

        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:minWidth="60dp"

        android:padding="0dp"
        android:singleLine="true"

        android:text="비밀번호 찾기"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="7sp"
        android:textSize="13sp"
        app:cornerRadius="16dp" />


</RelativeLayout>