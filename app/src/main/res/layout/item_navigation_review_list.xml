<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="328:130"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_navi_review_list_img_review"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/item_navi_review_list_tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="덕수궁 산책"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/item_navi_review_list_img_review"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_img_review" />

            <ImageView
                android:id="@+id/item_navi_review_list_icon_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/more_btn_heart"
                app:layout_constraintStart_toStartOf="@id/item_navi_review_list_tv_course_name"
                app:layout_constraintTop_toBottomOf="@id/item_navi_review_list_tv_course_name"
                android:tint="@color/aqua_marine"/>

            <TextView
                android:id="@+id/item_navi_review_list_tv_heart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="364"
                android:textColor="#000000"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/item_navi_review_list_icon_heart"
                app:layout_constraintStart_toEndOf="@id/item_navi_review_list_icon_heart"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_icon_heart" />

            <ImageView
                android:id="@+id/item_navi_review_list_icon_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/more_btn_review"
                app:layout_constraintBottom_toBottomOf="@id/item_navi_review_list_icon_heart"
                app:layout_constraintStart_toEndOf="@id/item_navi_review_list_tv_heart_num"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_icon_heart"
                android:tint="@color/blue_with_a_hint_of_purple"/>

            <TextView
                android:id="@+id/item_navi_review_list_tv_review_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23개 리뷰"
                android:textColor="#000000"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/item_navi_review_list_icon_review"
                app:layout_constraintStart_toEndOf="@id/item_navi_review_list_icon_review"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_icon_review" />

            <TextView
                android:id="@+id/item_navi_review_list_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="09/06 2019"
                android:textColor="#000000"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/item_navi_review_list_icon_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_icon_review" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_navi_review_list_civ_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/item_navi_review_list_img_review"
                app:layout_constraintTop_toBottomOf="@id/item_navi_review_list_img_review"/>

            <TextView
                android:id="@+id/item_navi_review_list_tv_review"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/item_navi_review_list_civ_icon"
                app:layout_constraintTop_toTopOf="@id/item_navi_review_list_civ_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="어쩌고저쩌고 후기내용 후기내용 후기내용 어쩌고 저쩌고 후기내용 후기내용 후기내용ㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹㅇㄹ"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>