<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="course"
            type="korea.seoul.pickple.data.entity.Course" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerItemAllCourse"
        android:layout_marginHorizontal="9dp"
        android:layout_marginBottom="24dp"
        android:layout_width="140dp"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/imgItemCourse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/round_filled_gray_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/txtCourseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:text="@{course.name}"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imageView7"
            tools:text="덕수궁 산책" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/navi_btn_heart_w" />

        <TextView
            android:id="@+id/txtCourseLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{`` + course.likeCount}"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView7"
            app:layout_constraintStart_toEndOf="@id/imageView7"
            app:layout_constraintTop_toTopOf="@id/imageView7"
            tools:text="364" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>