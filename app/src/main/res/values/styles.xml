<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:fontFamily">@font/nanum_square_font_family</item>
    </style>


    <!-- 수민 추가 -->
    <!--CollaspingToolbarLayout Title Styles-->
    <style name="MyToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="MyToolbatExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
